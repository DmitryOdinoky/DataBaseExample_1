<Window x:Class="DataBaseExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="119*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="DataGrid1" Grid.ColumnSpan="2"></DataGrid>
        <Button Name="SaveButton" Click="SaveButton_Click" Content="SAVE" Margin="0,320,0,0" Grid.ColumnSpan="2"></Button>
    </Grid>
</Window>
